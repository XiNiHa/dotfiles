#!/usr/bin/env nu

## Files and cmd
let file = $env.HOME + '/.cache/eww_launch.xyz'
let eww = '/usr/bin/eww'

## Run eww daemon if not running already
if ((pidof 'eww') == '') {
	print "Eww daemon not running"
	^$eww daemon
	sleep 1sec
}

## Open widgets
def run_eww [] {
	## Open bar on DP-1 if available, otherwise on first screen
	let monitors = hyprctl monitors -j | from json
	let dp1 = $monitors | filter { $in.name == 'DP-1' } | $in.0?
	let screen = if $dp1 != null {
		$dp1.id
	} else {
		$monitors | first | $in.id
	}
	^$eww open bar --screen $screen
}

## Launch or close widgets accordingly
if not ($file | path exists) {
	touch "$FILE"
	run_eww
} else {
	^$eww close-all
	killall eww
	run_eww
}
